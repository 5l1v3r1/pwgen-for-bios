{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es3",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": true,
        "strict": true,
        "sourceMap": true,
        "rootDir": "src/",
        "outDir": "dist/"
    },
    "exclude": [
        "node_modules"
    ]
}
